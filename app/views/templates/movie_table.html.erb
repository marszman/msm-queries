  <h1>
    List of all movies
  </h1>

  <hr>

  <table border="1">

    <tr>
      <th>
        ID
      </th>

      <th>
        Image
      </th>

      <th>
        Title
      </th>

      <th>
        Year
      </th>

      <th>
        Director
      </th>

      <th>
      </th>
    </tr>

    <% @movie_data.each do | current_movie | %>

    <% current_director_id = current_movie.director_id %>
    <% current_director_data = @director_data.where({ :id => current_director_id })  %>
    <% current_director_name = current_director_data[0].name  %>

    <tr>
      <td>
        <%=current_movie.id%>
      </td>

      <td>
        <img src=<%=current_movie.image%> style="width:250px;">
      </td>

      <td>
        <%=current_movie.title%>
      </td>

      <td>
        <%=current_movie.year%>
      </td>
     
      <td>
        <%=current_director_name%>
      </td>

      <td>
        <a href=<%="/movies/#{current_movie.id}"%>>
          Show details
        </a>
      </td>
    </tr>

    <% end %>

  </table>
